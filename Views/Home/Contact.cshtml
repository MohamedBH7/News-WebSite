@model contact_us

@{
    ViewData["Title"] = "Contact";
}
<div class="container" style="margin-top:20px;margin-bottom:20px;">
    <center>
<div class="col-10">
            <form asp-action="Save_Contact">
    <div class="row">
        <div class="col-md-6 form-group">
            <input type="text" asp-for="Name"  class="form-control"  placeholder="Your Name" required>
        </div>
        <div class="col-md-6 form-group mt-3 mt-md-0">
            <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required>
        </div>
    </div>
    <div class="form-group mt-3">
        <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required>
    </div>
    <div class="form-group mt-3">
        <textarea class="form-control" asp-for="Message" rows="7" placeholder="Message" required></textarea>
    </div>

    <br />
    <div><button type="submit" class="btn btn-success">Send Message</button></div>
</form>
</div>
    </center>
</div>